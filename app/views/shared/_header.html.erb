  <header class="header">
      <div class="header__bar_row">
      <h1 class="grid-6"><a href="/"><i class="fas fa-baby"></i>IkuPapa</a></h1>
      <div class= "user-nav">
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <%= link_to "Log out", destroy_user_session_path, method: :delete ,class: "post"%>
            <%= link_to "投稿する", new_tweet_path, class: "post" %>
           </div>
       <div class="greeting">
       こんにちは、
         <%= link_to "#{current_user.nickname}さん", "/users/#{current_user.id}", class: :greeting__link%>
        、
         <%= link_to "#{current_user.baby_name}ちゃん", "/users/#{current_user.id}", class: :greeting__link%>
      </div>

        <% else %> 
           <div class="grid-6"> 
            <%= link_to "Log in", new_user_session_path, class: "post" %>

  <header class="header">
      <div class="heading">
      <h1 class="title"><a href="/"><i class="fas fa-baby"></i>IkuPapa</a></h1>
      </div>
      <div class= "user-nav">
        <% if user_signed_in? %>
          <ul class="user_nav_lists">
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete ,class: "post"%></li>
            <li><%= link_to "Account編集", edit_user_path(current_user),class: "post"%></li>
            <li><%= link_to "投稿", new_tweet_path, class: "post" %></li>
          </ul>
        <% else %> 
           <ul class="user_nav_lists"> 
             <li><%= link_to "Log in", new_user_session_path, class: "post" %></li>
             <li><%= link_to "新規登録（無料）", new_user_registration_path, class: "post" %></li>
           </ul>
        <% end %> 
     </div>
     </div> 
   </header>
   <% if user_signed_in? %>
      <div class="greeting">
       こんにちは、
         <%= link_to "#{current_user.nickname}さん", "/users/#{current_user.id}", class: :greeting__link%>
        、
         <%= link_to "#{current_user.baby_name}さん", "/users/#{current_user.id}", class: :greeting__link%>
         （<%= (Date.today.strftime("%Y%m%d").to_i - current_user.baby_birthday.strftime("%Y%m%d").to_i) / 10000%>歳
         <% if (Date.today.strftime("%m%d").to_i - current_user.baby_birthday.strftime("%m%d").to_i) / 100 >= 0  %>
         <%= (Date.today.strftime("%m%d").to_i - current_user.baby_birthday.strftime("%m%d").to_i) / 100 %>ヶ月）
         <% else %> 
          <%= (Date.today.strftime("%m%d").to_i - current_user.baby_birthday.strftime("%m%d").to_i) / 100 + 12 %>ヶ月）
         <% end %> 
         <% end %> 
      </div>